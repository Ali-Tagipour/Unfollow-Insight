<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#0D0D0D"
    android:padding="32dp">

    <!-- لوگو -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ggg"
        android:background="#E91E63"
        android:padding="28dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آنفالو اینسایت"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کشف کسانی که فالوت نکردن"
        android:textSize="19sp"
        android:textColor="#FF5252"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="برای شروع، فایل ZIP دیتای اینستاگرامت رو که از تنظیمات > حریم خصوصی و امنیت > دانلود داده‌ها گرفتی، انتخاب کن."
        android:textSize="15sp"
        android:textColor="#AAAAAA"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginBottom="48dp"
        android:paddingHorizontal="16dp"/>

    <!-- فقط این دو خط رو با app: عوض کردم -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_json"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="انتخاب فایل ZIP"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="#E91E63"
        app:icon="@android:drawable/ic_menu_upload"
        app:iconGravity="start"
        app:iconPadding="16dp"
        app:iconTint="#FFFFFF"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_analyze"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="شروع تحلیل"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="#424242"
        android:enabled="false"
        android:alpha="0.6"
        style="@style/Widget.MaterialComponents.Button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made by Ali Taghipour (A.T)"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginTop="56dp"/>

</LinearLayout>