<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFF3E0">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ggg"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آنفالو اینسایت"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FF6F61"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btnSelectJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="انتخاب فایل ZIP اینستاگرام"
        android:textSize="16sp"
        android:padding="14dp"
        android:background="#FF6F61"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnAnalyze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="شروع تحلیل"
        android:textSize="16sp"
        android:padding="14dp"
        android:background="#FFB6B6"
        android:textColor="#000000"/>
</LinearLayout>
